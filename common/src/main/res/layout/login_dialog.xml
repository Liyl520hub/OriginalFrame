<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/dialog_ll"
        android:layout_width="@dimen/x300"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/shape_gray_range_20_login"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_dialog"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@mipmap/wenti"
            android:layout_marginTop="@dimen/y20"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message__dialog"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:text="您输入的账户有误"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/y19"
            android:gravity="center"
            android:layout_marginBottom="@dimen/y50"
            android:textColor="@color/white"
            />

    </LinearLayout>


</LinearLayout>