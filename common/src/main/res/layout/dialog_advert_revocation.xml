<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x80"
        android:layout_marginRight="@dimen/x80"
        android:background="@drawable/shape_round_corner_bg_white"
        android:paddingBottom="@dimen/y48">

        <TextView
            android:id="@+id/dialog_tip_layout_title"
            style="@style/Text_16sp_2b2d2e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dialog_tip_layout_title_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="14dp"
            android:padding="8dp"
            android:src="@drawable/dialog_close"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/color_f4f4f4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_tip_layout_title" />

        <FrameLayout
            android:id="@+id/dialog_tip_layout_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/revocation_tip_1_title"
                    style="@style/Text_16sp_a3a5a6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="12dp"
                    android:paddingStart="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/revocation_tip_1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/revocation_tip_1"
                    style="@style/Text_16sp_2b2d2e"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingRight="12dp"
                    android:paddingStart="12dp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/revocation_tip_1_title"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toRightOf="@+id/revocation_tip_1_title"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/cancle" />

                <TextView
                    android:id="@+id/revocation_tip_2_title"
                    style="@style/Text_16sp_a3a5a6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:paddingRight="12dp"
                    android:paddingStart="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/revocation_tip_2"
                    app:layout_constraintTop_toBottomOf="@+id/revocation_tip_1" />

                <TextView
                    android:id="@+id/revocation_tip_2"
                    style="@style/Text_16sp_2b2d2e"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingRight="12dp"
                    android:paddingStart="12dp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/revocation_tip_2_title"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toRightOf="@+id/revocation_tip_2_title"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="@string/cancle" />

                <TextView
                    android:id="@+id/revocation_tip_3_title"
                    style="@style/Text_16sp_a3a5a6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:paddingRight="12dp"
                    android:paddingStart="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/revocation_tip_3"
                    app:layout_constraintTop_toBottomOf="@+id/revocation_tip_2_title" />

                <TextView
                    android:id="@+id/revocation_tip_3"
                    style="@style/Text_16sp_2b2d2e"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:gravity="left|center_vertical"
                    android:paddingRight="12dp"
                    android:paddingStart="12dp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/revocation_tip_3_title"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toRightOf="@+id/revocation_tip_3_title"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/cancle" />
            </android.support.constraint.ConstraintLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/dialog_tip_layout_left_button"
            style="@style/Text_16sp_2b2d2e"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/selector_corner_2_normal_e4e4e4_pressed_c9c9c9"
            android:gravity="center"
            android:text="@string/cancle"
            app:layout_constraintBaseline_toBaselineOf="@+id/dialog_tip_layout_right_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/dialog_tip_layout_right_button" />

        <TextView
            android:id="@+id/dialog_tip_layout_right_button"
            style="@style/Text_16sp_2b2d2e"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/selector_corner_2_normal_ffc400_pressed_e5b000"
            android:gravity="center"
            android:text="@string/action_ok"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/dialog_tip_layout_left_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_tip_layout_content_container" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>

