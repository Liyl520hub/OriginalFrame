<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_empty"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_marginTop="@dimen/y60"
        android:id="@+id/iv_emptyimg"
        android:layout_width="@dimen/x388"
        android:layout_height="@dimen/y412"
        android:src="@mipmap/empty_data"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_below="@+id/iv_emptyimg"
        android:id="@+id/tv_emptydesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y60"
        android:textSize="16sp"
        android:textColor="#333333"
        android:text="当前页面什么都没有!" />

    <TextView
        android:visibility="gone"
        android:id="@+id/btn_net_fresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_emptydesc"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/x20"
        android:text="点我刷新"
        android:textColor="@color/color_ffaOOf" />
</RelativeLayout>